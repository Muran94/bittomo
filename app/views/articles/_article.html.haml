.row
  = link_to article, class: "c-content-list__item col-12 p-3" do
    %object
      = link_to user_profile_path(article.user), class: "c-content-list__item__header u-font-size-ext-small d-flex align-items-center" do
        = image_tag(article.user.avatar.url, class: "u-image-size-thumbnail rounded-circle mr-1")
        %span.mr-3
          = article.user.name
        %span.text-muted
          = article.created_at.strftime("%Y/%m/%d %H:%M")
    .c-content-list__item__title.text-break
      = article.title
    .c-content-list__item__meta
      %i.fas.fa-map-marker-alt<>
      = article.prefecture_names_ja
