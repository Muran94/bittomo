- if show_header?
  %header.l-header
    .l-header__container
      = link_to root_path, class: "l-header__logo" do
        = image_tag("logos/logo_text_white.svg", alt: "ビットモのロゴ画像")
      %nav.l-header__nav
        - if user_signed_in?
          = link_to new_article_path, class: "l-header__nav-item l-header__nav-item--icon-based" do
            %i.fas.fa-pen
            %span 募集
          = link_to root_path, class: "l-header__nav-item l-header__nav-item--icon-based" do
            %i.fas.fa-search
            %span 検索
          = link_to root_path, class: "l-header__nav-item l-header__nav-item--icon-based" do
            %i.fas.fa-bars
            %span メニュー
        - else
          = link_to "ログイン", new_user_session_path, class: "l-header__nav-item c-btn c-btn--link c-btn--small text-white"
          = link_to "会員登録", new_user_registration_path, class: "l-header__nav-item c-btn c-btn--white c-btn--small text-primary"
