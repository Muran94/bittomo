- if show_header?
  %header.l-header
    .l-header__container
      = link_to root_path, class: "l-header__logo" do
        = image_tag("logos/logo_text_white.svg", alt: "ビットモのロゴ画像")
      %nav.l-header__nav
        - if user_signed_in?
          = link_to new_article_path, class: "l-header__nav-item l-header__nav-item--icon-based" do
            %i.fas.fa-pen
            %span 募集
          .l-header__nav-item.l-header__nav-item--icon-based{data: { toggle: "modal", target: "#search-modal"} }
            %i.fas.fa-search
            %span 検索
          .l-header__nav-item.l-header__nav-item--icon-based{data: { toggle: "sidebar", target: "#sidebar"} }
            %i.fas.fa-bars
            %span メニュー
        - else
          .l-header__nav-item.l-header__nav-item--icon-based{data: { toggle: "modal", target: "#search-modal"} }
            %i.fas.fa-search
            %span 検索
          = link_to new_user_session_path, class: "l-header__nav-item l-header__nav-item--icon-based" do
            %i.fas.fa-lock
            %span ログイン
          .l-header__nav-item.l-header__nav-item--icon-based{data: { toggle: "sidebar", target: "#sidebar"} }
            %i.fas.fa-bars
            %span メニュー
